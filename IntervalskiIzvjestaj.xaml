        <Label x:Name="labelSamoUkupnoGodina" Content="Ukupno" HorizontalAlignment="Left" Margin="400,475,0,0" VerticalAlignment="Top" Width="144" Height="40" FontSize="24" RenderTransformOrigin="0.533,0.52"/>
